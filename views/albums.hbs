<div class="album-container">
    <h1 class="text">Albums Of {{this.name}}</h1>

    <div class="row">
        {{#each albums as |album|}}
            <div class="col-sm-4">
                <div class="card">
                    <img src="{{album.images.0.url}}" class="card-img-top" alt="{{album.name}}" style="max-width: 200px; height: auto;">
                    <div class="card-body">
                        <h5 class="card-title">{{album.name}}</h5>
                        <a href="/albums/{{album.id}}" class="btn btn-primary">View Tracks</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>


